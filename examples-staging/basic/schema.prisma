datasource mongodb {
  url      = env("DATABASE_URL")
  provider = "mongodb"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
  output          = "node_modules/.prisma/client"
}

model User {
  id                  String   @id @default(dbgenerated()) @map("_id") @mongodb.ObjectId
  name                String?
  email               String?  @unique
  avatar_filesize     Int?
  avatar_extension    String?
  avatar_width        Int?
  avatar_height       Int?
  avatar_mode         String?
  avatar_id           String?
  attachment_filesize Int?
  attachment_mode     String?
  attachment_filename String?
  password            String?
  isAdmin             Boolean?
  roles               String?
}